  CSIDL_MYVIDEO                   = $0e;
  // Папка "Моё видео"

  CSIDL_PROFILE                   = $28;
  // Папка пользователя (обычно C:\Documents and Settings\username)

  CSIDL_PROGRAM_FILES             = $26;
